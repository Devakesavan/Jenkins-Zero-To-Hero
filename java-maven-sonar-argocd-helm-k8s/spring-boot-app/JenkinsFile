pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', credentialsId: 'github-cred', url: 'https://github.com/Devakesavan/Jenkins-Zero-To-Hero.git'
            }
        }

        stage('Build Project') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh './build.sh' // Assuming you have a build script named build.sh
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh './test.sh' // Assuming you have a test script named test.sh
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/*.log', allowEmptyArchive: true // Archive logs
        }
        success {
            echo 'Build succeeded!'
            // Add email or Slack notification here if needed
        }
        failure {
            echo 'Build failed!'
            // Add email or Slack notification here if needed
        }
    }
}
