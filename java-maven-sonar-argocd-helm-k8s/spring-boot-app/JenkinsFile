pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Devakesavan/Jenkins-Zero-To-Hero.git'
            }
        }
        
        stage('Verify Project Structure') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'pwd'
                    sh 'ls -la'
                    sh 'echo "Checking if pom.xml exists:"'
                    sh 'ls -la pom.xml'
                    sh 'echo "Checking build and test scripts in src/main:"'
                    sh 'ls -la src/main/*.sh'
                }
            }
        }
        
        stage('Build and Package') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'chmod +x src/main/build.sh'
                    sh './src/main/build.sh'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'chmod +x src/main/test.sh'
                    sh './src/main/test.sh'
                }
            }
        }
    }
    
    post {
        always {
            // Archive the built JAR files and logs
            archiveArtifacts artifacts: '**/target/*.jar, **/*.log', allowEmptyArchive: true
            
            // Publish test results using junit step
            junit testResults: '**/target/surefire-reports/*.xml', allowEmptyResults: true
        }
        success {
            echo 'üéâ Build succeeded!'
        }
        failure {
            echo '‚ùå Build failed!'
        }
    }
}
