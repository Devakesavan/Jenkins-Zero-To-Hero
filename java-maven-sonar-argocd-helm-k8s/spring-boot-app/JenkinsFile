pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Devakesavan/Jenkins-Zero-To-Hero.git'
            }
        }
        
        stage('Build Project') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    // Make scripts executable
                    sh 'chmod +x src/build.sh'
                    
                    // Run script from current directory (where pom.xml is)
                    // but call the script from src/
                    sh 'bash src/build.sh'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    // Make scripts executable
                    sh 'chmod +x src/test.sh'
                    
                    // Run script from current directory (where pom.xml is)
                    sh 'bash src/test.sh'
                }
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: '**/*.log, **/target/*.jar', allowEmptyArchive: true
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
