pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Devakesavan/Jenkins-Zero-To-Hero.git'
            }
        }
        
        stage('Verify Project Structure') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'pwd'
                    sh 'ls -la'
                    sh 'echo "Checking if pom.xml exists:"'
                    sh 'ls -la pom.xml'
                }
            }
        }
        
        stage('Build Project') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn test'
                }
            }
        }
        
        stage('Package Application') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
    }
    
    post {
        always {
            // Archive the built JAR files and logs
            archiveArtifacts artifacts: '**/target/*.jar, **/*.log', allowEmptyArchive: true
            
            // Publish test results if they exist
            publishTestResults testResultsPattern: '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'üéâ Build succeeded!'
        }
        failure {
            echo '‚ùå Build failed!'
        }
    }
}
